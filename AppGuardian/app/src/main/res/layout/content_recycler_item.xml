<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:translationZ="2dp"
    app:cardCornerRadius="14dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue">

        <ImageView
            android:id="@+id/thumbnailImg"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_marginHorizontal="6dp"
            android:scaleType="centerCrop"
            android:src="@drawable/load2"
            app:layout_constraintEnd_toEndOf="@id/recLayout"
            app:layout_constraintStart_toStartOf="@id/recLayout"
            app:layout_constraintTop_toTopOf="@id/recLayout" />

        <TextView
            android:id="@+id/webTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6dp"
            android:text="@string/webPubId"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/recLayout"
            app:layout_constraintStart_toStartOf="@+id/recLayout"
            app:layout_constraintTop_toBottomOf="@id/thumbnailImg" />

        <TextView
            android:id="@+id/sectionNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_6dp"
            android:text="@string/sectionName"
            android:textColor="#3268ca"
            android:layout_marginEnd="@dimen/_3dp"
            app:layout_constraintBottom_toBottomOf="@id/recLayout"
            app:layout_constraintStart_toStartOf="@+id/recLayout"
            app:layout_constraintTop_toBottomOf="@+id/webTitleTv"
            app:layout_constraintEnd_toStartOf="@id/favContentCheckBox"/>


        <CheckBox
            android:id="@+id/favContentCheckBox"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_margin="@dimen/_10dp"
            android:background="@drawable/favorite_checkbox"
            android:button="@null"
            android:gravity="center"
            android:padding="@dimen/_6dp"
            app:layout_constraintBottom_toBottomOf="@id/recLayout"
            app:layout_constraintEnd_toEndOf="@id/recLayout"
            app:layout_constraintTop_toBottomOf="@id/webTitleTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>