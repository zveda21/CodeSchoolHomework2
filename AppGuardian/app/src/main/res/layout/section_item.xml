<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    android:padding="@dimen/_6dp">

    <TextView
        android:id="@+id/favSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:layout_marginTop="@dimen/_6dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/favorite_checked"
        app:layout_constraintStart_toEndOf="@id/favSection"
        app:layout_constraintTop_toTopOf="@id/favSection"
        app:layout_constraintBottom_toBottomOf="@id/favSection"
        android:layout_marginStart="@dimen/_10dp"
        android:background="@drawable/favorite_back"
        android:padding="@dimen/_3dp"
        android:id="@+id/deleteFavSec" />


</androidx.constraintlayout.widget.ConstraintLayout>