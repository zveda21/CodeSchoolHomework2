<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorText">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonsStyleLight" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/grayColorLight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ButtonsStyleDark">
        <item name="android:background">@color/grayColorDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="YellowButtonStyle">
        <item name="android:background">@color/yellowColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>